; vim:ft=dosini
[global/wm]
include-directory = ~/.config/polybar/modules

[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
color1 = ${xrdb:color1}
color2 = ${xrdb:color2}
color3 = ${xrdb:color3}
color4 = ${xrdb:color4}
color5 = ${xrdb:color5}
color6 = ${xrdb:color6}

[bar/bar]
monitor = ${env:MONITOR:}
foreground = ${colors.foreground}
background = ${colors.background}
offset-x = 1%
offset-y = 5
width = 98%
height = 35
radius = 8
wm-restack = bspwm
font-0 = ${xrdb:font}
line-size = 3
padding = 1
module-margin = 1
modules-left = bspwm
modules-center = date
modules-right = vpn volume bluetooth filesystem packages exit
