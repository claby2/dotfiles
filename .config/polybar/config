[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
color1 = ${xrdb:color1}
color2 = ${xrdb:color2}
color3 = ${xrdb:color3}
color4 = ${xrdb:color4}
color5 = ${xrdb:color5}

[bar/bar]
monitor = ${env:MONITOR:}
foreground = ${colors.foreground}
background = ${colors.background}
height = 30
wm-restack = bspwm
font-0 = ${xrdb:font}
line-size = 3
padding = 1
module-margin = 1
modules-left = bspwm
modules-center = date
modules-right = volume bluetooth filesystem packages

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
enable-scroll = false
label-focused-foreground = ${colors.color4}
label-focused-underline = ${colors.color4}
label-occupied-foreground = ${colors.color4}

[module/date]
type = internal/date
date = %a %d %b
time = %I:%M:%S %p
label = %date% %time%
label-foreground = ${colors.color4}

[module/volume]
type = custom/script
exec = "~/bin/volume"
interval = 1
format = 墳 <label>
format-foreground = ${colors.color1}

[module/bluetooth]
type = custom/script
exec = btdevices | grep 'Connected: yes' | wc -l
format =  <label>
format-foreground = ${colors.color2}

[module/filesystem]
type = internal/fs
mount-0 = /
format-mounted = <label-mounted>
label-mounted =  %used%/%total%
label-mounted-foreground = ${colors.color3}

[module/packages]
type = custom/script
exec = "pacman -Q | wc -l"
format =  <label>
format-foreground = ${colors.color5}
