[bar/main]
enable-ipc = true
wm-restack = bspwm
offset-x = 0
offset-y = 0
height = 27
line-size = 3
bottom = false
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = Inter:style=Regular;2
font-1 = Inter:style=Bold;2
font-2 = Inter:style=SemiLight;2
padding = 4
module-margin = 1
modules-left = bspwm
modules-right = spotify-play-pause date

[module/date]
type = internal/date
interval = 5
date = %a %d %b
time = %I:%M %p
label = "%date%   %time%"
label-font = 3

[module/bspwm]
type = internal/bspwm
pin-workspaces = false
label-focused = %name%
label-focused-foreground = ${colors.foreground}
label-focused-underline = ${colors.foreground}
label-focused-font = 2
label-focused-padding = 1
label-occupied = %name%
label-occupied-foreground = ${colors.foreground}
label-occupied-padding = 1
label-urgent = %name%!
label-urgent-background = ${colors.color1}
label-urgent-padding = 1
label-empty = %name%
label-empty-foreground = ${colors.foreground}
label-empty-padding = 1

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo "P"
initial = 1
click-left = playerctl play-pause spotify

