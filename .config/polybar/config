[colors]
background = ${xrdb:color0:#222}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

alpha = #00000000

[bar/main]
enable-ipc = true
offset-x = 0
offset-y = 1%
height = 27
line-size = 3
bottom = false
background = ${colors.alpha}
foreground = ${colors.foreground}
font-0 = Inter:style=Regular;2
font-1 = Inter:style=Bold;2
font-2 = Inter:style=SemiLight;2
padding = 4
module-margin = 1
modules-right = date

[bar/bspwm]
inherit = bar/main
wm-restack = bspwm
modules-left = bspwm

[bar/i3]
inherit = bar/main
wm-restack = i3
modules-left = i3

[module/date]
format-background = ${colors.background}
format-padding = 1
type = internal/date
interval = 5
date = %a %d %b
time = %I:%M %p
label = "%date%   %time%"
label-font = 3

[module/bspwm]
format-background = ${colors.background}
format-padding = 1
type = internal/bspwm
pin-workspaces = false
label-focused = %name%
label-focused-foreground = ${colors.foreground}
label-focused-underline = ${colors.foreground}
label-focused-font = 2
label-focused-padding = 1
label-occupied = %name%
label-occupied-foreground = ${colors.foreground}
label-occupied-padding = 1
label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1
label-empty = %name%
label-empty-foreground = ${colors.foreground}
label-empty-padding = 1

[module/i3]
format-background = ${colors.background}
format-padding = 1
type = internal/i3
pin-workspaces = false
label-focused = %name%
label-focused-foreground = ${colors.foreground}
label-focused-underline = ${colors.foreground}
label-focused-font = 2
label-focused-padding = 1
label-occupied = %name%
label-occupied-foreground = ${colors.foreground}
label-occupied-padding = 1
label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1
label-empty = %name%
label-empty-foreground = ${colors.foreground}
label-empty-padding = 1

[global/wm]
