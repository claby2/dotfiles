-- vim:ft=haskell
Config
  { font = "xft:JetBrainsMono Nerd Font:pixelsize=15"
  , additionalFonts = ["xft:JetBrainsMono Nerd Font:bold:pixelsize=20"]
  , bgColor = "#0f1419"
  , fgColor = "#e6e1cf"
  , position = TopSize C 100 25
  , commands =
      [ Run StdinReader
      , Run Volume "default" "Master" ["-t", "<volume>%"] 10
      -- Retrieve number of bluetooth devices that are currently connected.
      , Run
          Com
          "sh"
          ["-c", "btdevices | grep \"Connected: yes\" | wc -l"]
          "bluetooth"
          20
      , Run DiskU [("/", "<used>/<size>")] [] 20
      , Run Com "sh" ["-c", "pacman -Q | wc -l"] "packages" 20
      , Run Date "%a %d %b %I:%M:%S %p" "date" 10
      ]
  , sepChar = "%"
  , alignSep = "}{"
  , template =
      " <fc=#96e6cb><fn=1> </fn></fc> %StdinReader%}{\
                       \  <fc=#36a3d9>%default:Master% 墳 </fc>\
                       \  <fc=#96e6cb>%bluetooth% </fc>\
                       \  <fc=#36a3d9>%disku% 﫭 </fc>\
                       \  <fc=#96e6cb>%packages%  </fc>\
                       \  <fc=#36a3d9>%date%</fc>\
                       \ "
  }
