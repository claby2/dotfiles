# Bindings for ncmpcpp
# vim:ft=conf

def_key "+"
    show_clock
def_key "="
    volume_up

def_key "j"
    scroll_down
def_key "k"
    scroll_up

def_key "J"
    select_item
    scroll_down

def_key "K"
    select_item
    scroll_up

def_key "ctrl-u"
    page_up

def_key "ctrl-d"
    page_down

def_key "h"
    previous_column
def_key "l"
    next_column

def_key "."
    show_lyrics

def_key "x"
    delete_playlist_items
