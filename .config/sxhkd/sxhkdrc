#

# wm independent hotkeys
#

# terminal emulator
super + Return
    st

# program launcher
super + space
    dmenuexec -r

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd && \
        notify-send "sxhkd" "Reloaded configuration"

super + shift + i
    ipv4 -n

super + shift + r
    changewall -r

super + shift + p
    notify-send "mpc" "$(mpc toggle | head -2)"

super + shift + s
    flameshot gui

super + ctrl + shift + s
    flameshot screen -c

super + x
    xrdb ~/.Xresources && \
        notify-send "xrdb" "Loaded ~/.Xresources"

super + p ; {b,v,m}
    dmenuexec -{b,v,m}

XF86Audio{Lower,Raise}Volume
    amixer set "Master" 10%{-,+}

XF86AudioMute
    amixer set "Master" 0%

XF86MonBrightness{Down,Up}
    xbacklight -{dec,inc} 10

#
# bspwm hotkeys
#

# quit bspwm
super + shift + q
    bspc quit

# restart bspwm
super + q
    bspc wm -r && notify-send "bspwm" "Restarted bspwm"

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + shift + f
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# swap the node in the given direction
super + shift + {h,l}
	bspc node -s {west,east}

# focus the previous window in the current desktop
super + k
    bspc node -f prev.local.!hidden.window

# focus the next window in the current desktop
super + j
    bspc node -f next.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the next/previous monitor
super + {minus,equal}
    bspc monitor --focus {prev,next}

super + shift + {minus,equal}
    bspc node -m {west,east} && bspc monitor --focus {prev,next} && bspc node -f next.local.!hidden.window

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9}
    bspc {desktop -f,node -d} 'focused:^{1-9}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

super + alt + {j,k}
  bspc node -z {bottom 0 40 || bspc node -z top 0 40, \
                top 0 -40 || bspc node -z bottom 0 -40}

super + {h,l}
  bspc node -z {left -40 0 || bspc node -z right -40 0, \
                right 40 0 || bspc node -z left 40 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
